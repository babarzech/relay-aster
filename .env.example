# RELAY API Configuration
RELAY_API_URL=https://api.relay.link

# User Settings
# The address of the user initiating the deposit (you)
USER_ADDRESS=0xYourWalletAddressHere

# Deposit Amount (in wei) - e.g. 1 ETH = 1000000000000000000
DEPOSIT_AMOUNT=100000000000000000

# Destination Chain ID (e.g. 56 for BSC, 1 for Ethereum)
DESTINATION_CHAIN_ID=56

# Destination Contract Address (The contract needed to interact with on destination chain)
DESTINATION_CONTRACT_ADDRESS=0x128463A60784c4D3f46c23Af3f65Ed859Ba87974

# Destination Token Address (e.g. USDT on BSC)
DESTINATION_CURRENCY=0x55d398326f99059ff775485246999027b3197955

# Origin Chain ID (e.g. 1 for Ethereum, 42161 for Arbitrum)
ORIGIN_CHAIN_ID=42161

# Origin Currency (leave empty for native token like ETH, or address for ERC20)
ORIGIN_CURRENCY=0x0000000000000000000000000000000000000000

# Referral Code or extra parameter for the deposit function (3rd param)
REFERRAL_CODE=1000
